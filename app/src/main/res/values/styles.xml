<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorAccent">@color/indigo</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/indigo_dark</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--Widget-->

    <style name="Widget.MyEye" parent="@android:style/Widget" />


    <!--BottomNavigationView-->
    <style name="Widget.MyEye.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="itemTextAppearanceActive">
            @style/TextAppearance.MyEye.BottomNavigationView.Active
        </item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.MyEye.BottomNavigationView
        </item>
        <item name="labelVisibilityMode">selected</item>
    </style>

    <!--Toolbar-->
    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.MyEye.ToolbarTitle</item>
        <item name="android:popupTheme">@style/AppTheme.PopupTheme</item>
    </style>

    <!--TextAppearance  -->

    <!--BottomNavigationView-->
    <style name="TextAppearance.MyEye.BottomNavigationView" parent="@style/TextAppearance.MaterialComponents.BottomNavigationView.Colored">
        <!--TODO test font -->
        <item name="android:fontFamily">@font/lobster</item>
        <item name="android:textColor">@color/bottom_nav_item</item>
    </style>

    <style name="TextAppearance.MyEye.BottomNavigationView.Active">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Toolbar-->
    <style name="TextAppearance.MyEye.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/lobster</item>

    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />

</resources>
