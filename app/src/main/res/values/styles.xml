<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Widget.MyEye" parent="@android:style/Widget" />


    <style name="TextAppearance.MyEye.BottomNavigationView" parent="@style/TextAppearance.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:textColor">@color/bottom_nav_item</item>
    </style>

    <style name="TextAppearance.MyEye.BottomNavigationView.Active">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.MyEye.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="itemTextAppearanceActive">
            @style/TextAppearance.MyEye.BottomNavigationView.Active
        </item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.MyEye.BottomNavigationView
        </item>
        <item name="labelVisibilityMode">selected</item>
    </style>

</resources>
